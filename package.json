{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for E11EVEN Central App",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "build:api": "tsc --project tsconfig.api.json",
    "start": "node dist/index.js",
    "start:api": "NODE_ENV=development PORT=3001 node dist/api/server.js",
    "dev": "vite",
    "dev:api": "NODE_ENV=development PORT=3001 npx tsx -r dotenv/config src/api/server.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "api:start": "NODE_ENV=development PORT=3001 node src/api/api-server.js",
    "api:start:prod": "NODE_ENV=production PORT=3001 node src/api/api-server.js",
    "build:frontend": "vite build && node scripts/remove-debug-header.js",
    "preview": "vite preview",
    "restart": "./restart-servers.sh",
    "restart:api": "pkill -f 'node.*api/server' || true && npm run api:start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:schema-operations": "npx ts-node src/mcp/test-schema-operations.ts",
    "test:env": "node scripts/test-env-loading.js",
    "test:auth": "node --experimental-modules scripts/run-auth-tests.js",
    "test:auth:unit": "mocha --experimental-modules tests/api/session-management.test.js",
    "test:auth:integration": "mocha --experimental-modules tests/api/auth-flow.test.js",
    "health-check": "node scripts/health-check.js",
    "mcp:start": "npx ts-node src/mcp/index.ts",
    "mcp:stop": "pkill -f \"ts-node src/mcp/index.ts\" || true",
    "mcp:configure": "npx ts-node src/mcp/configure.ts",
    "mcp:test": "npx ts-node src/mcp/index.ts && curl -X POST -H \"Content-Type: application/json\" -d '{\"jsonrpc\":\"2.0\",\"method\":\"rpc.methodCall\",\"params\":{\"function_name\":\"test_supabase_access\"},\"id\":1}' http://localhost:3100",
    "mcp:client": "npx ts-node src/mcp/test-client.ts",
    "mcp:setup-sql": "ts-node -e \"require('fs').readFileSync('src/mcp/supabase-setup.sql', 'utf8').split(';').forEach(stmt => console.log(stmt))\""
  },
  "keywords": [
    "mcp",
    "supabase",
    "e11even"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@supabase/supabase-js": "^2.49.1",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.8.3",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.8",
    "class-variance-authority": "^0.7.1",
    "cmdk": "^1.0.0",
    "compression": "^1.8.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "lucide-react": "^0.482.0",
    "next-themes": "^0.4.6",
    "node-cron": "^3.0.3",
    "pg": "^8.14.0",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^7.3.0",
    "react-toastify": "^11.0.5",
    "socket.io": "^4.8.1",
    "sonner": "^2.0.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "ws": "^8.18.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.11.26",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.14",
    "chai": "^5.2.0",
    "chalk": "^5.4.1",
    "clsx": "^2.1.1",
    "dotenv-expand": "^12.0.1",
    "esbuild": "^0.20.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^11.1.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.21",
    "sinon": "^19.0.4",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3",
    "vite": "^6.2.2"
  }
}
